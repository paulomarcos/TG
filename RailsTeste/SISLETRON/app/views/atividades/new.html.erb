<div class="basic-grey">
  <%= simple_form_for(@atividade) do |f| %>
    <h1>Criar atividade
        <span>Preencha o formulário para criar uma nova atividade.</span>
    </h1>
    <span>Título: <%= f.text_field :titulo %></span>
    <%= hidden_field_tag(:projeto_id, params[:projeto_id]) %>
    <%= submit_tag "Criar" %>
  <% end %>
</div>
