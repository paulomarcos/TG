<div class="basic-grey">
  <%= simple_form_for(@projeto) do |f| %>
    <h1>Criar projeto
        <span>Preencha os campos abaixo para criar um projeto.</span>
    </h1>
    <span>Título: <%= f.text_field :titulo %></span>
    <span>Avaliação: <%= f.text_field :avaliacao %></span>
    <span>Descrição: <%= f.text_area :descricao%></span>

    <h2>Conteúdos
      <span>Selecione os conteúdos que serão usados no projeto</span>
    </h2>
    <%= f.collection_check_boxes(:conteudo_ids, Conteudo.all, :id, :titulo, :item_wrapper_class => 'checkbox_container') %>
    <%= submit_tag "Criar" %>
  <% end %>
</div>
